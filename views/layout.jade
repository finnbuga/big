doctype html
html
  head
    title= title
    meta(charset="utf-8")
    meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
    meta(name="description" content="Write a value prop here for each page to show in search results.")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    // Social meta tags for Facebook, Twitter, etc. if it's for sharing
    link(rel="stylesheet", href="/stylesheets/style.css")
  body
    header
      include header
    main
      block content
    footer
      include footer
